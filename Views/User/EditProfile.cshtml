@model userdb.Models.User
<h1>Register</h1>
<div class="container">
    <form asp-controller="User" asp-action="SaveUser" method="post">
        <div class="form-group">
            <span asp-validation-for="first_name"></span>
            <label asp-for="first_name"></label>
            <input class="form-control" asp-for="first_name">
        </div>
        <div class="form-group">
            <span asp-validation-for="last_name"></span>
            <label asp-for="last_name"></label>
            <input class="form-control" asp-for="last_name">
        </div>
        <div class="form-group">
            <span asp-validation-for="email"></span>
            <label asp-for="email"></label>
            <input class="form-control" asp-for="email">
        </div>
        <input type="submit" value="Save">
    </form>
</div>
